							label.form-label.thin.block.large Адрес
							div.icon-input
								input.form-control(type="text" placeholder="Улица, дом, строение, корпус, квартира" value="Ул. Ленина, д. 45а, кв. 44")/
								i.fa.fa-map-marker.input-i
