												a.photo-miniature-delete(href="#")
												div.photo-miniature-descr Ожидаемый результат
									div.one-fifth
										div.photo-miniature-add
											a.add-image
												i.fa.fa-plus
												span Добавить фото
						div.start-finish-date
							div.row
								div.col-xs-12.col-sm-12.col-md-5
									div.start-date
